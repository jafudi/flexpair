{
  "variables": {
    "image_name": "",
    "image_family": "",
    "image_zone": "",
    "project_id": "",
    "version_suffix": "",
    "cloud_token": "Nogx0zcrLyqz8w.atlasv1.eRV3NyIlDcw6psnPpVP2xwOPi4oRw9o8H3UNAf4aR7EyRitnMdgXatS7ts3DzcDD2Wc",
    "version": "1.0.4",
    "box_basename": "lubuntu-docker-python",
    "cpus": "2",
    "disk_size": "65536",
    "headless": "",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "iso_checksum_type": "sha256",
    "iso_name": "ubuntu-20.04-legacy-server-amd64.iso",
    "memory": "1024",
    "mirror": "http://cdimage.ubuntu.com",
    "mirror_directory": "ubuntu-legacy-server/releases/20.04/release",
    "no_proxy": "{{env `no_proxy`}}",
    "preseed_path": "preseed.cfg",
    "template": "lubuntu-desktop-20.04-amd64"
  },
  "builders": [
    {
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=de<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=de_DE.UTF-8<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=de<wait>",
        " keyboard-configuration/layout=de<wait>",
        " keyboard-configuration/variant=mac<wait>",
        " locale=de_DE.UTF-8<wait>",
        " netcfg/get_domain=vm<wait>",
        " netcfg/get_hostname=vagrant<wait>",
        " grub-installer/bootdev=/dev/sda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}}<wait>",
        " -- <wait>",
        "<enter><wait10>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": "{{ user `headless` }}",
      "http_directory": "packer-desktop/ubuntu/http",
      "iso_checksum_url": "{{user `mirror`}}/{{user `mirror_directory`}}/SHA256SUMS",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
      "output_directory": "packer-desktop/builds/packer-{{user `box_basename`}}-virtualbox",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_username": "vagrant",
      "ssh_timeout": "10000s",
      "type": "virtualbox-iso",
      "memory": "{{ user `memory` }}",
      "cpus": "{{ user `cpus` }}",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "packer-{{ user `box_basename` }}"
    },
    {
      "image_name": "{{ user `image_name` }}",
      "type": "googlecompute",
      "project_id": "{{ user `project_id`}}",
      "source_image_family": "ubuntu-minimal-2004-lts",
      "image_family": "{{ user `image_family` }}",
      "ssh_username": "vagrant",
      "instance_name": "{{ user `image_name` }}",
      "zone": "{{ user `image_zone` }}",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/compute",
        "https://www.googleapis.com/auth/devstorage.full_control"
      ]
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "HOME_DIR=/home/vagrant",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "no_proxy={{user `no_proxy`}}"
      ],
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
      "expect_disconnect": true,
      "scripts": [
        "packer-desktop/ubuntu/scripts/update.sh",
        "packer-desktop/_common/motd.sh",
        "packer-desktop/_common/sshd.sh",
        "packer-desktop/ubuntu/scripts/networking.sh",
        "packer-desktop/ubuntu/scripts/sudoers.sh",
        "packer-desktop/ubuntu/scripts/docker-compose.sh",
        "packer-desktop/ubuntu/scripts/lubuntu-desktop.sh",
        "packer-desktop/ubuntu/scripts/gitlab-runner.sh",
        "packer-desktop/ubuntu/scripts/firefox-homepage.sh",
        "packer-desktop/ubuntu/scripts/update.sh",
        "packer-desktop/ubuntu/scripts/vagrant.sh",
        "packer-desktop/ubuntu/scripts/desktop-sharing.sh",
        "packer-desktop/_common/virtualbox.sh",
        "packer-desktop/_common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "vagrantfile_template": "packer-desktop/ubuntu/vagrantfile_templates/Vagrantfile.tpl",
      "output": "packer-desktop/builds/{{user `box_basename`}}.{{.Provider}}.box"
    }
  ]
}
